<%= form_with(model: @product, local: true) do |f| %>
  <%= f.label :name, class: "label-new" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :serial, class: "label-new" %>
  <%= f.text_field :serial, class: "form-control" %>

  <%= f.label :url, class: "label-new" %>
  <%= f.text_area :url, class: "form-control", rows: 3 %>

  <%= f.submit "#{yield(:button_text)}", class: "btn btn-secondary btn-block btn-new"  %>
<% end %>