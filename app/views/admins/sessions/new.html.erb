<div class="col col-md-4 col-md-offset-4">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "form-control" %>
    </div>

    <br>
    
    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "passwrod", class: "form-control" %>
    </div>

    <br>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-secondary btn-block" %>
    </div>
  <% end %>

  <!-- < if devise_mapping.rememberable? %>
